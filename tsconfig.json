{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"jsx": "preserve",
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"inlineSources": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"baseUrl": "src",
		"typeRoots": [
			"node_modules/@types",
			"src/types"
		],
		"skipLibCheck": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"exclude": [
		"src/addons/webapi/**/*.godot.ts",
		"src/addons/webapi/**/*.godot.tsx"
	]
}